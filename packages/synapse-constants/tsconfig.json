{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "rootDir": "./",
    "target": "es2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": [
    "./constants/**/*",
    "./custom.d.ts",
    "./index.ts",
    "./index.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
