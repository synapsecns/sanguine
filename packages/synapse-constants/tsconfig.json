{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react",
    "target": "es2019",
    "baseUrl": ".",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./constants/**/*",
    "./constants/assets/index.ts",
    "./constants/assets/**/*",
    "./custom.d.ts",
    "./index.ts",
    "./index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
