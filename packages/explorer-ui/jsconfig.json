{
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "@assets":          ["./assets"],
        "@assets/*":        ["./assets/*"],
        "@assets/**/*":     ["./assets/**/*"],
        "@bignumber":       ["./utils/bignumber"],
        "@bignumber/*":     ["./utils/bignumber/*"],
        "@bignumber/**/*":  ["./utils/bignumber/**/*"],
        "@components":      ["./components"],
        "@components/*":    ["./components/*"],
        "@components/**/*": ["./components/**/*"],
        "@tw":              ["./components/tailwind"],
        "@tw/*":            ["./components/tailwind/*"],
        "@tw/**/*":         ["./components/tailwind/**/*"],
        "@icons":           ["./components/icons"],
        "@icons/*":         ["./components/icons/*"],
        "@icons/**/*":      ["./components/icons/**/*"],
        "@layouts":         ["./components/layouts"],
        "@layouts/*":       ["./components/layouts/*"],
        "@layouts/**/*":    ["./components/layouts/**/*"],
        "@urls":            ["./utils/urls"],
        "@urls/*":          ["./utils/urls/*"],
        "@urls/**/*":       ["./urls/**/*"],
        "@utils":           ["./utils"],
        "@utils/*":         ["./utils/*"],
        "@constants":       ["./constants"],
        "@constants/*":     ["./constants/*"],
        "@constants/**/*":  ["./constants/**/*"],
        "@styles":          ["./utils/styles"],
        "@styles/*":        ["./utils/styles/*"],
        "@styles/**/*":     ["./utils/styles/**/*"],
        "@pages":           ["./pages"],
        "@pages/*":         ["./pages/*"],
        "@graphql":         ["./graphql"],
        "@graphql/*":       ["./graphql/*"]
      }
    },
    "exclude": [
      "node_modules",
      "**/node_modules/*"
    ]
  }