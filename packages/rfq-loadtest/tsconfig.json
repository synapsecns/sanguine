{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                       
    "rootDir": "./src"                        
  },
  "include": ["src"],                         
  "exclude": ["node_modules", "dist"]
}