{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "sourceMap": true,
      "esModuleInterop": true,
      "composite": true,
      "resolveJsonModule": true,
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "paths": {
        "@synapsecns/*": ["./packages/*/src"]
      }
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
